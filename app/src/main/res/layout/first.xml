<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.stx.xhb.xbanner.XBanner
        android:id="@+id/xbanner"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_fen"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/xbanner"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/jd_maio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_fen"
        android:gravity="center"
        android:textColor="#f00"
        android:textSize="20sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_miao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jd_maio"
        android:paddingTop="10dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_tui"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/recycler_miao"
        android:paddingTop="10dp" />

</RelativeLayout>
